{
  "name": "auto-accept-antigravity",
  "displayName": "AutoAccept-Antigravity",
  "description": "Automatically accept AI agent actions (file edits, terminal commands) in VS Code â€” zero config, no launch flags needed",
  "version": "0.5.1",
  "icon": "icon.png",
  "publisher": "kaushiksaravanan",
  "author": "Kaushik Saravanan",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaushiksaravanan/Antigravity-AutoAccecpt.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "keywords": [
    "auto-accept",
    "antigravity",
    "agent",
    "ai",
    "automation",
    "auto",
    "accept",
    "vibe-coding"
  ],
  "categories": [
    "Machine Learning",
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoAcceptAgent.toggle",
        "title": "Auto Accept: Toggle"
      },
      {
        "command": "autoAcceptAgent.diagnostics",
        "title": "Auto Accept: Run Diagnostics"
      }
    ],
    "configuration": {
      "title": "Auto Accept Agent",
      "properties": {
        "autoAcceptAgent.blockedCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "rm -rf /",
            "format",
            "mkfs"
          ],
          "description": "A list of strings or command snippets that, if detected near the 'Run' button, will prevent the agent from automatically accepting."
        },
        "autoAcceptAgent.enableCommandPolling": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, the extension will actively poll and execute 'accept' commands (e.g., accepting file edits and terminal commands) in the background."
        },
        "autoAcceptAgent.pollIntervalMs": {
          "type": "number",
          "default": 1500,
          "description": "How often (in milliseconds) the extension polls for pending agent actions to accept."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.4.0"
  }
}